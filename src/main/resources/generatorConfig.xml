<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE generatorConfiguration
  PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
  "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>

	<!--  	要変更：MySQLに接続するConnectorJのjarファイルを指定 -->
	<classPathEntry location="C:\Users\mysql-connector-java-8.0.22\mysql-connector-java-8.0.22.jar"/>

	<!--  	要変更：DB接続先URLを指定。今回、タイムゾーンは日本標準時としている（?serverTimezone=JST） -->
 	<context id="MySQL" targetRuntime="MyBatis3">
    <jdbcConnection driverClass="com.mysql.cj.jdbc.Driver"
        connectionURL="jdbc:mysql://localhost:3306/contract?serverTimezone=JST"
        userId="root"
        password="mysqlmysql">
    </jdbcConnection>

	<!--////////////// 	要変更：自動生成ファイルの格納先パス指定////////////////////////// -->

	<!-- 作成ファイル①Domainクラス：テーブルカラムを読み込んでフィールド変数・getter/setterを設定 -->
	<!-- 作成ファイル②Exampleクラス：後述するMapperの引数として与えることで、where句の様に働く -->
    <javaModelGenerator targetPackage="com.example.domain" targetProject="src/main/java/">
      <property name="enableSubPackages" value="true" />
      <property name="trimStrings" value="true" />
    </javaModelGenerator>

	<!-- 	作成ファイル③XMLファイル -->
	<!-- 	・DBから取得した値をどのドメインに格納するかマッピング定義する -->
	<!-- 	・Javaから渡された値をどのように解釈するかのマッピング定義する -->
	<!-- 	・後述するMapperインターフェースに宣言されたメソッドに対応するSQLを記述する -->
	<!-- 	※myBatisGeneratorで自動生成すると、基本的なSQLはデフォルトで書いておいてくれる -->
    <sqlMapGenerator targetPackage="com.example.mapper"  targetProject="src/main/resources">
      <property name="enableSubPackages" value="true" />
    </sqlMapGenerator>

	<!-- 	作成ファイル④Mapperインターフェース -->
	<!-- 	・前述したXML上のSQLを呼び出す。 -->
	<!-- 	※myBatisGeneratorで自動生成すると、insertやdeleteなど基本的な機能はデフォルトで書いておいてくれる -->
    <javaClientGenerator type="XMLMAPPER" targetPackage="com.example.mapper"  targetProject="src/main/java">
      <property name="enableSubPackages" value="true" />
    </javaClientGenerator>

	<!--////////////// 自動生成ファイルの格納先パス指定 ここまで ///////////////////////////-->
	
	<!-- 	DB名とテーブル名 -->
    <table schema="contract" tableName="admins" />
    <table schema="contract" tableName="contractors" />
    <table schema="contract" tableName="contracts" />
    <table schema="contract" tableName="joint_guarantors" />
    <table schema="contract" tableName="buildings" />
    <table schema="contract" tableName="shops" />
    <table schema="contract" tableName="dues" />
    <table schema="contract" tableName="banks" />
    <table schema="contract" tableName="relations" />
    
	
  </context>
</generatorConfiguration>